<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ABD1C9"
    tools:context=".Contact">

    <TextView
        android:id="@+id/TextView_Inform1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aşağıda verilmiş olan iletişim kanalları aracılığıyla bizimle iletişime geçebilir ve durumunuzu bildirebilirsiniz."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/ImageView_Call"
        android:layout_width="95dp"
        android:layout_height="95dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView_Inform1"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="17dp"
        android:src="@drawable/call"/>

    <Button
        android:id="@+id/Button_Call"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:fontFamily="sans-serif-thin"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="TELEFON ET"
        android:textColor="#FFFFFF"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView_Inform1"
        tools:ignore="TextSizeCheck"
        android:layout_marginTop="90dp"
        android:layout_marginRight="25dp"/>

    <ImageView
        android:id="@+id/ImageView_Message"
        android:layout_width="95dp"
        android:layout_height="95dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageView_Call"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="17dp"
        android:src="@drawable/message"/>

    <Button
        android:id="@+id/Button_Message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:fontFamily="sans-serif-thin"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="MESAJ GÖNDER"
        android:textColor="#FFFFFF"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_Call"
        tools:ignore="TextSizeCheck"
        android:layout_marginTop="70dp"
        android:layout_marginRight="25dp"/>

    <ImageView
        android:id="@+id/ImageView_Mail"
        android:layout_width="95dp"
        android:layout_height="95dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageView_Message"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="17dp"
        android:src="@drawable/mail"/>

    <Button
        android:id="@+id/Button_Mail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:fontFamily="sans-serif-thin"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="MAİL AT"
        android:textColor="#FFFFFF"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_Message"
        tools:ignore="TextSizeCheck"
        android:layout_marginTop="70dp"
        android:layout_marginRight="25dp"/>

    <TextView
        android:id="@+id/TextView_Inform2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uyarı! Herhangi Bir İletişim Hattının Gereksiz Yere Meşgul Edilmesi Suç Kapsamında Değerlendirilmektedir."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextSizeCheck"
        android:layout_marginBottom="7dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>